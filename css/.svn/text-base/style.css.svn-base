/* CSS Document */

body{
	background-color:#FFF;
	margin-top:0px;
	background-image: url(../images/CERRATO_fascia_top.png);
	background-repeat:repeat-x;}
	
H1{
	margin:0px;
	font-family:Arial, Helvetica, sans-serif;
	font-size:14px;
	color:#FFF;
	font-weight:normal;
	text-align:left;
	padding-bottom:4px;
	border-bottom:1px solid #707FA5;
}

H2{
	margin:0px;
	font-family:Arial, Helvetica, sans-serif;
	font-size:12px;
	color:#002e60;
	font-weight:normal;
	text-align:left;
}

	
.testo_b{
	font-family:Arial, Helvetica, sans-serif;
	font-size:13px;
	color:#FFF;
}

.testo_p{
	font-family:Arial, Helvetica, sans-serif;
	font-size:12px;
	line-height:150%;
	color:#484649;
	text-align:left;
}

.testo_blu{
	font-family:Arial, Helvetica, sans-serif;
	font-size:12px;
	color:#002e60;
}
	
div#verticale {
    width: 350px;
    height: 400px;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -200px;
    margin-left: -175px;
}

a.blu, a.blu:visited{
	font-family:Arial, Helvetica, sans-serif;
	font-size:13px;
	color:#002F60;
	text-decoration:none;
}

a.blu:hover{
	font-family:Arial, Helvetica, sans-serif;
	font-size:13px;
	color:#666;
	text-decoration:none;
}



	
.testo_tab{
	font-family:Arial, Helvetica, sans-serif;
	font-size:10px;
	color:#002e60;	
}

a.link, a.link:visited{
	font-size:12px;
	text-decoration:none;
	font-family:Arial, Helvetica, sans-serif;
	color:#002F60;
}


a.link:hover {
	font-size:12px;
	text-decoration:none;
	font-family:Arial, Helvetica, sans-serif;
	color: #F03;}
	
	
.testo_g{
	font-family:Arial, Helvetica, sans-serif;
	font-size:11px;
	color:#707173;
}

#Header{
	clear:both;
	font-family:Arial, Helvetica, sans-serif;
	font-size:14px;
	height:30px;
	line-height:30px;
	
}

#Menu{
		width:1000px;
	    margin:0 auto;
		margin-top:20px;
		margin-bottom:10px;
		clear:both;
		font-family:Arial, Helvetica, sans-serif;
		font-size:14px;
		background-color:#f2f2f2;
}

#Header a, a:visited{
	color:#002F60;
	text-decoration:none;

}

#Header a:hover{
	text-decoration: underline;
	color:#666;
}

#Container{
	width:1000px;
	min-height:300px;
	margin:0 auto;
	font-family:Arial, Helvetica, sans-serif;
	font-size:12px;
	
}

#Container a, a:visited{
	color:#002F60;
	text-decoration:none;
}

#Container a:hover{
	text-decoration: underline;
	color:#666;
}

#Container h3{
	color:#002F60;
	font-weight:bold;
	font-size:16px;
	background-color:#f2f2f2;
	padding:5px;
}

#container input{
	border:1px solid #ccc;
	margin:5px 0px;
}

	
#form_registrazione{
	font-family:Arial, Helvetica, sans-serif;
	font-size:12px;
}
	
#tabellaRubrica{
	width:1000px;
	margin:0 auto;
}
