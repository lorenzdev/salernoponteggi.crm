/* CSS Document */

#form_registrazione{
	font-family:Arial, Helvetica, sans-serif;
	font-size:12px;
}

#form_registrazione h3{
	color:#002F60;
	font-weight:bold;
	font-size:16px;
	background-color:#f2f2f2;
	padding:5px;
}

#form_registrazione input{
	border:1px solid #ccc;
	margin:5px 0px;
	width:250px;
}

#form_registrazione textarea{
	border:1px solid #ccc;
	margin:5px 0px;
	width:250px;
}

